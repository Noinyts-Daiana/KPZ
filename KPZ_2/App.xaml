<Application x:Class="KPZ_2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KPZ_2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:FullNameConverter x:Key="FullNameConverter"/>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border"
                                    CornerRadius="10,10,0,0"
                                    MinWidth="80"
                                    MinHeight="30"
                                    Padding="{TemplateBinding Padding}"
                                    Background="LightSkyBlue"
                                    BorderThickness="1"
                                    BorderBrush="DeepSkyBlue">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  ContentSource="Header"/>
                            </Border>
                            <Ellipse Width="20" Height="20" Fill="LightBlue"
                                     HorizontalAlignment="Right" VerticalAlignment="Top"
                                     Margin="0,-5,-5,0"/>
                            <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource AncestorType=TabItem}}" 
                                       Foreground="DeepSkyBlue"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Margin="0,0,2,0"
                                       FontSize="10"
                                       TextAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="DeepSkyBlue"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="DeepSkyBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="LightSkyBlue"/>
            <Setter Property="BorderBrush" Value="DeepSkyBlue"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
