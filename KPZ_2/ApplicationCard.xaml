<UserControl x:Class="KPZ_2.ApplicationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KPZ_2"
             Height="70">
    <Border CornerRadius="15" Background="LightBlue" Padding="10" Margin="0,0,0,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="14"
                           Text="{Binding Converter={StaticResource FullNameConverter}}"/>
                <TextBlock Grid.Row="1" Text="{Binding JobTitle}" FontStyle="Italic" FontSize="12"/>
            </Grid>

            <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="Видалити"
                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                        CommandParameter="{Binding}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
