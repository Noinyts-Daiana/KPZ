<Window x:Class="KPZ_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KPZ_2"
        Title="MainWindow" Height="400" Width="600">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <TabControl x:Name="MyTabControl">
            <TabItem Header="Подати заявку" Tag="{Binding Vacancies.Count}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Виберіть вакансію:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListBox ItemsSource="{Binding Vacancies}" 
                                 SelectedItem="{Binding SelectedVacancy}" 
                                 DisplayMemberPath="Title" Height="120"/>


                    </StackPanel>

                    <StackPanel Grid.Column="1" Width="200">
                        <TextBlock Text="Ім'я:" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <TextBlock Text="Прізвище:" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <Button Content="Подати заявку" 
                                Command="{Binding SubmitApplicationCommand}" 
                                Width="120" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Список заявок" Tag="{Binding Applications.Count}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="Auto"/>
                        
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Margin="10">
                        <ItemsControl ItemsSource="{Binding Applications}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:ApplicationCard/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">

                        <Button Content="Зберегти"
        Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
        CommandParameter="{Binding}">
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="Button.Click">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                        Storyboard.TargetProperty="Width"
                        To="200" Duration="0:0:0.5" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>

                    </StackPanel>
                </Grid>

            </TabItem>

        </TabControl>
    </Grid>
</Window>
